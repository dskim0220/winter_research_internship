{
    "SETS": {
        "query": "Set of 3 products (A1, A2, A3) and 22 time periods (t)",
        "LaTeX": "I = \\{A1, A2, A3\\}, T = \\{1, 2,..., 22\\}"
    },
    "VARIABLES": [
        {
            "name": "x_t_p",
            "type": "Binary",
            "LaTeX": "x_{t,p} \\in \\{0, 1\\}, \\forall t \\in T, p \\in I",
            "description": "Indicator variable: 1 if product p is produced in period t"
        }
    ],
    "PARAMETERS": [
        {
            "name": "demand",
            "LaTeX": "\\text{demand} = 5300",
            "description": "Maximum demand for each product"
        },
        {
            "name": "price",
            "LaTeX": "\\text{price} = 124",
            "description": "Selling price per 100 kg of product"
        },
        {
            "name": "cost",
            "LaTeX": "\\text{cost} = 73.30",
            "description": "Production cost per 100 kg of product"
        },
        {
            "name": "quota",
            "LaTeX": "\\text{quota} = 500",
            "description": "Maximum daily production quota"
        },
        {
            "name": "activation_cost",
            "LaTeX": "\\text{activation_cost} = 170000",
            "description": "Fixed activation cost"
        },
        {
            "name": "min_batch",
            "LaTeX": "\\text{min_batch} = 20",
            "description": "Minimum production batch size"
        },
        {
            "name": "time_period",
            "LaTeX": "\\text{time_period} = 22",
            "description": "Total production capacity in days"
        }
    ],
    "OBJECTIVE": {
        "query": "Maximize total revenue minus fixed activation cost",
        "LaTeX": "\\max \\sum_{t \\in T} \\sum_{p \\in I} (\\text{price} \\cdot x_{t,p} - \\text{cost} \\cdot x_{t,p}) - \\text{activation_cost}"
    },
    "CONSTRAINTS": [
        {
            "rule_id": 1,
            "name": "production_limit",
            "query": "The total production of A1, A2, A3 does not exceed 1210 tons",
            "LaTeX": "\\sum_{t \\in T} \\sum_{p \\in I} x_{t,p} \\leq 1210"
        },
        {
            "rule_id": 2,
            "name": "activation_constraint",
            "query": "If A1 is produced, it must activate production lines at least 57 minutes",
            "LaTeX": "\\sum_{t \\in T} x_{t,A1} \\geq 5300 + 500 \\cdot (t-1) - \\sum_{t \\in T} y_{t,A1}"
        }
    ]
}